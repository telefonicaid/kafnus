{
  "name": "mongo_test_case_metadata",
  "fiware-service": "test",
  "fiware-servicepath": "/mongo",
  "subscriptions": {
    "historic": {
      "description": "Device:HISTORIC:mongo:historic",
      "status": "active",
      "subject": {
        "entities": [
          { "idPattern": ".*", "type": "Device" }
        ],
        "condition": { "attrs": ["temperature"] }
      },
      "notification": {
        "kafkaCustom": {
          "url": "kafka://kafka:9092",
          "topic": "raw_mongo"
        },
        "attrs": ["temperature"]
      }
    }
  },
  "updateEntities": [
    {
      "id": "Device:001",
      "type": "Device",
      "temperature": {
        "value": 25.3,
        "type": "Float",
        "metadata": {
          "unit": { "type": "Text", "value": "Celsius" },
          "accuracy": { "type": "Number", "value": 0.1 }
        }
      }
    }
  ]
}
