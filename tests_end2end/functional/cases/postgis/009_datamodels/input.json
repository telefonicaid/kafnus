{
  "name": "simple_test_case",
  "fiware-service": "test",
  "fiware-servicepath": "/simple",
  "subscriptions": {
    "historic": {
      "description": "Sensor:HISTORIC:simple:historic",
      "status": "active",
      "subject": {
        "entities": [
          {
            "idPattern": ".*",
            "type": "Sensor"
          }
        ],
        "condition": {
          "attrs": [
            "TimeInstant"
          ]
        }
      },
      "notification": {
        "kafkaCustom": {
          "url": "kafka://kafka:29092",
          "topic": "smc_raw_historic",
          "headers": {
            "fiware-datamodel": "dm-by-entity-type-database-schema"
          }
        },
        "attrs": [
          "TimeInstant",
          "temperature"
        ]
      }
    },
    "lastdata": {
      "description": "Sensor:LASTDATA:simple:lastdata",
      "status": "active",
      "subject": {
        "entities": [
          {
            "idPattern": ".*",
            "type": "Sensor"
          }
        ],
        "condition": {
          "attrs": [
            "TimeInstant"
          ]
        }
      },
      "notification": {
        "kafkaCustom": {
          "url": "kafka://kafka:29092",
          "topic": "smc_raw_lastdata",
          "headers": {
            "fiware-datamodel": "dm-by-entity-type-database-schema"
          }
        },
        "attrs": [
          "TimeInstant",
          "temperature"
        ]
      }
    },
    "mutable": {
      "description": "Sensor:mutable:simple:mutable",
      "status": "active",
      "subject": {
        "entities": [
          {
            "idPattern": ".*",
            "type": "Sensor"
          }
        ],
        "condition": {
          "attrs": [
            "TimeInstant"
          ]
        }
      },
      "notification": {
        "kafkaCustom": {
          "url": "kafka://kafka:29092",
          "topic": "smc_raw_mutable",
          "headers": {
            "fiware-datamodel": "dm-by-entity-type-database-schema"
          }
        },
        "attrs": [
          "TimeInstant",
          "temperature"
        ]
      }
    }
    },
  "updateEntities": [
    {
      "id": "Sensor1",
      "type": "Sensor",
      "TimeInstant": {
        "type": "DateTime",
        "value": "2025-06-26T11:00:00Z"
      },
      "temperature": {"value": 25.0, "type": "Float"}
    },
    {
      "id": "Sensor1",
      "type": "Sensor",
      "TimeInstant": {
        "type": "DateTime",
        "value": "2025-06-26T12:00:00Z"
      },
      "temperature": {"value": 26.0, "type": "Float"}
    }
  ]
}
