{
  "name": "jdbc-errors-sink",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": "1",
    "topics": "smc_test_error_log_processed",
    "connection.url": "jdbc:postgresql://${env:KAFNUS_TESTS_PG_HOST}:${env:KAFNUS_TESTS_PG_PORT}/${env:KAFNUS_TESTS_PG_DBNAME}",
    "connection.user": "${env:KAFNUS_TESTS_PG_USER}",
    "connection.password": "${env:KAFNUS_TESTS_PG_PASSWORD}",

    "insert.mode": "insert",
    "table.name.format": "${topic}",
    "auto.create": true,
    "auto.evolve": false,

    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": true,
    "key.converter": "org.apache.kafka.connect.json.JsonConverter",

    "transforms": "HeaderRouter,convertTimestamp",

    "transforms.HeaderRouter.type": "com.telefonica.HeaderRouter",
    "transforms.HeaderRouter.datamodel": "dm-postgis-errors",

    "transforms.convertTimestamp.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
    "transforms.convertTimestamp.target.type": "Timestamp",
    "transforms.convertTimestamp.field": "timestamp",
    "transforms.convertTimestamp.format": "yyyy-MM-dd'T'HH:mm:ss.SSSXXX",

    "errors.tolerance": "all",
    "errors.log.enable": true,
    "errors.log.include.messages": true,
    "connection.attempts": "10",
    "connection.backoff.ms": "10000"
  }
}
